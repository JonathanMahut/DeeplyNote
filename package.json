{
    "name": "DeeplyNote",
    "version": "0.0.0",
    "main": "main.js",
    "scripts": {
        "backend-serve": "ttsc --project tsconfig.backend.json --watch",
        "backend-build": "ttsc --project tsconfig.backend.json",
        "angular-build": "ng build --prod",
        "angular-serve": "ng serve",
        "electron-build": "electron-builder",
        "electron-serve": "electron . --devTools",
        "all-build": "npm run angular-build && npm run backend-build && npm run electron-build",
    },
    "build": {
        "appId": "DeeplyNote",
        "compression": "maximum",
        "asar": true,
        "win": {
            "target": "nsis",
            "icon": "./src/assets/icon/icon_transparent.png"
        },
        "electronDownload": {
            "cache": "./cache"
        },
        "directories": {
            "output": "./distElectron"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true
        },
        "files": [
            "main.js",
            "package.json",
            "./dist/**/*",
            "backend/**/*.js"
        ]
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^8.2.14",
        "@angular/cdk": "~8.2.3",
        "@angular/common": "^8.2.14",
        "@angular/compiler": "^8.2.14",
        "@angular/core": "^8.2.14",
        "@angular/flex-layout": "^8.0.0-beta.27",
        "@angular/forms": "^8.2.14",
        "@angular/material": "^8.2.3",
        "@angular/platform-browser": "^8.2.14",
        "@angular/platform-browser-dynamic": "^8.2.14",
        "@angular/router": "^8.2.14",
        "@zerollup/ts-transform-paths": "^1.7.11",
        "electron-reload": "^1.5.0",
        "electron-store": "^5.1.0",
        "material-community-components": "^5.0.1",
        "material-design-icons-iconfont": "^5.0.1",
        "ngx-electron": "^2.2.0",
        "rxjs": "~6.4.0",
        "tslib": "^1.10.0",
        "ttypescript": "^1.5.10",
        "zone.js": "~0.9.1"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^0.803.23",
        "@angular/cli": "^8.3.23",
        "@angular/compiler-cli": "^8.2.14",
        "@angular/language-service": "^8.2.14",
        "@types/node": "^12.12.21",
        "codelyzer": "^5.2.1",
        "electron": "^7.1.10",
        "electron-builder": "^21.2.0",
        "ts-node": "~7.0.0",
        "tslint": "~5.15.0",
        "typescript": "~3.5.3"
    }
}
